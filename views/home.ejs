<% if(isLogin) { %>
<div class="header-btn roboto-medium">
  <a href="/admin/create-post"
    ><i class="fa-regular fa-square-plus icon"></i>Add a new post as <%= userEmail ?
    userEmail : " " %></a
  >
  <form action="/logout" method="post">
    <input type="text" value="<%= csrfToken %>" name="_csrf" hidden />
    <button class="btn"><i class="fa-solid fa-arrow-right-from-bracket icon"></i>Logout</button>
  </form>
</div>
<% } else { %>
<div class="login-div roboto-medium">
  <div>
    <a href="/login"
      ><i class="fa-solid fa-user-check icon"></i>Login to existing account</a
    >
    <a href="/register"
      ><i class="fa-solid fa-user-plus icon"></i>Create account</a
    >
  </div>
</div>
<% } %>
<hr />
<h1 class="title roboto-medium">Recents Posts</h1>
<% if(postsArr.length === 0 && isLogin) { %>
<div class="roboto-medium">
  <h4>Nothing to see ?</h4>
  <p>Create a new post now !!!</p>
  <a href="/admin/create-post">Create a new post</a>
</div>
<% } %> <% for(let post of postsArr) { %>
<div class="post-box roboto-medium">
  <div class="post-inner">
    <p class="post-title"><%= post.title %></p>
    <p class="post-description"><%= post.description.substr(1, 500) %>...</p>
    <p class="post-email">Post by: <%= post.userId.email %></p>
  </div>
  <a href="/post/<%= post._id %>">See more...</a>
</div>
<% } %> <%- include("./includes/foot") %>
