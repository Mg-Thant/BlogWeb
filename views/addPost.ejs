<%- include("./includes/head") %>

    <section class="mx-auto">
      <a href="/">Go back home</a>
      <h1 class="title form-title">Add a new post here!</h1>
      <% if(errorMsg) { %>
        <p class="error-msg"><%= errorMsg %></p>
      <% } %>
      <form action="/admin" method="post" novalidate>
        <div class="form-box">
          <input type="text" value="<%= csrfToken %>" name="_csrf" hidden>
          <div>
            <label for="title">Enter title</label>
            <input type="text" id="title" name="title" value="<%= oldData.title %>" required />
          </div>
          <div>
            <label for="photo">Enter photo</label>
            <input type="text" id="photo" name="photo" value="<%= oldData.photo %>" required />
          </div>
          <div>
            <label for="description">Enter description</label>
            <textarea
              name="description"
              id="description"
              cols="30"
              rows="10"
            ><%= oldData.description %></textarea>
          </div>
        </div>
        <button>Add Post</button>
      </form>
    </section>
  </body>
  <%- include("./includes/foot") %>