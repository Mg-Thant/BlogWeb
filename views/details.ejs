<%- include("./includes/head") %>
<section class="details mx-auto roboto-medium">
  <div class="details-box">
    <h1><%= post.title %></h1>
    <a href="/"><i class="fa-solid fa-arrow-left-long icon"></i>Go back home</a>
  </div>
  <p class="ctl">Post By: <%= post.userId.email %></p>
  <% if(date) { %>
  <p class="ctl">Upload at: <%= date %></p>
  <% } %>
  <a href="/save/<%= post._id %>">Save to device</a>
  <img src="<%= '/' + post.imgUrl %>" alt="<%= post.title %>" />
  <hr />
  <p><%= post.description %></p>
  <% if(post.userId._id.toString() === loginUserId.toString()) { %>
  <a href="/admin/edit/<%= post._id %>" class="btn-full">Edit</a>
  <form action="/admin/delete/<%= post._id %>" method="post">
    <input type="text" value="<%= csrfToken %>" name="_csrf" hidden />
    <button>Delete</button>
  </form>
  <% } %>
</section>
<%- include("./includes/foot") %>
