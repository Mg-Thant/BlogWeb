<%- include("./includes/head") %>
    <section class="mx-auto roboto-medium">
      <a href="/"><i class="fa-solid fa-arrow-left-long icon"></i>Go back home</a>
      <h1 class="title form-title">Add a new post here!</h1>
      <% if(errorMsg) { %>
        <p class="error-msg"><%= errorMsg %></p>
      <% } %>
      <form action="/admin/edit-post" method="post" novalidate>
        <div class="form-box">
          <input type="text" value="<%= csrfToken %>" name="_csrf" hidden>
          <input type="text" value="<%= isValidationFail ? postId : post._id %>" name="postId" hidden>
          <div>
            <label for="title">Enter title</label>
            <input type="text" id="title" name="title" value="<%= isValidationFail ? oldData.title : post.title %>" required />
          </div>
          <div>
            <label for="photo">Enter photo</label>
            <input type="text" id="photo" name="photo" value="<%= isValidationFail ? oldData.imgUrl : post.imgUrl %>" required />
          </div>
          <div>
            <label for="description">Enter description</label>
            <textarea
              name="description"
              id="description"
              cols="30"
              rows="10"
            ><%= isValidationFail ? oldData.description : post.description %></textarea>
          </div>
        </div>
        <button>Update Post</button>
      </form>
    </section>
  </body>
  <%- include("./includes/foot") %>